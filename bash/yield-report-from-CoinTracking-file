rm -f output
touch output
for i in KAG
do
	CoinType=$i
	while IFS= read j
	do
	   SearchString="$j"
	   CoinType=$i
	   printf "%-5s %20s\n" $i $j
	   cat "$FileName" | awk -F, -v s="$SearchString" -v t=$CoinType '(($1 == "Income") && ($10 == s) && ($3==t)) {print $3, $2, $11}' | grep 2023 | awk -F " " '{sum += $2}  END {print sum}'   
	done < tmp >> output 
done
cat output | grep [0-9] | paste -s -d + | bc -l | xargs printf "%.5f\n"
